<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account_action_bar"
    android:layout_width="match_parent"
    android:background="@drawable/white_background"
    android:layout_height="64dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/account_image_title"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/account_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="用户名"
        android:textColor="@color/正文"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/account_image_title"
        app:layout_constraintTop_toTopOf="@+id/account_image_title" />

    <TextView
        android:id="@+id/mode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="目前模式"
        android:textColor="@color/提示文字"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/account_image_title"
        app:layout_constraintStart_toStartOf="@+id/account_name_title" />

    <TextView
        android:id="@+id/version_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/version"
        android:textColor="@color/正文"
        app:layout_constraintBaseline_toBaselineOf="@+id/account_name_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:clickable="true"
        android:id="@+id/about_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/about_this_app"
        android:textColor="@color/提示文字"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/mode_title"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>